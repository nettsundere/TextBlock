{
  "name": "TextBlock",
  "description": "Hide all text in order to make the WEB beautiful",
  "version": "1.0",

  "permissions": [
    "storage",
    "http://*/",
    "https://*/"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/disabled/icon16.png",
      "24": "icons/disabled/icon24.png",
      "32": "icons/disabled/icon32.png"
    },
    "default_title": "Hide all text"
  },

  "background": {
    "scripts": [
        "page_injector.js",
        "ui.js",
        "app.js",
        "browser_init.js"
      ]
  },

  "web_accessible_resources": [
    "/css/text_block.css"
  ],

  "manifest_version": 2
}
